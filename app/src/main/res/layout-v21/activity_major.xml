<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ccu.kyapp.MajorActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/topBg"
        android:id="@+id/Toolbar_major"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <TextView
            android:id="@+id/textView_toolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/imageView_majorMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/clinical_main"
            />
        <TextView
            android:id="@+id/textView_majorTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#77000000"
            android:paddingLeft="16dp"
            />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/ScrollView_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="학과 소개"
                android:textSize="24sp"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager_major"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="홍보영상"
                android:textSize="24sp"
                android:textColor="#000000"
                android:paddingLeft="16dp"
                android:layout_marginTop="16dp"
                />
            <kr.co.prnd.YouTubePlayerView
                android:id="@+id/YouTubePlayerView_major"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>