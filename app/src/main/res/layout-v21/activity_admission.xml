<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFFF"
        tools:ignore="MissingDefaultResource">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/topBg"
            android:id="@+id/Toolbar_select"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="입시정보"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                />
        </androidx.appcompat.widget.Toolbar>
            <RelativeLayout
                android:id="@+id/relativeLayout_susi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingStart="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:background="@drawable/btn_admisson"
                >
                <TextView
                    android:id="@+id/textView_susi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="수시모집"
                    android:textSize="24sp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/next_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             android:orientation="vertical"
             android:visibility="invisible"
             >
             <RelativeLayout
                 android:id="@+id/relativeLayout_subject"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="32dp"
                 android:layout_marginRight="32dp"
                 android:paddingStart="16dp"
                 android:paddingBottom="8dp"
                 android:paddingTop="8dp"
                 android:background="@drawable/btn_admisson"
                 >
                 <TextView
                     android:id="@+id/textView_subject"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="학생부 교과"
                     android:textSize="18sp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     />
                 <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/bottom_arrow"
                     android:layout_alignParentEnd="true"
                     android:layout_centerInParent="true"
                     />
             </RelativeLayout>
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="300dp"
                 android:src="@drawable/susi_information"
                 android:visibility="visible"
                 />
             <RelativeLayout
                 android:id="@+id/relativeLayout_all"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="32dp"
                 android:layout_marginRight="32dp"
                 android:paddingStart="16dp"
                 android:paddingBottom="8dp"
                 android:paddingTop="8dp"
                 android:background="@drawable/btn_admisson"
                 >
                 <TextView
                     android:id="@+id/textView_all"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="학생부 종합"
                     android:textSize="18sp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     />
                 <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/bottom_arrow"
                     android:layout_alignParentEnd="true"
                     android:layout_centerInParent="true"
                     />
             </RelativeLayout>
             <ImageView
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:src="@drawable/all_infomation"
                 />
             <RelativeLayout
                 android:id="@+id/relativeLayout_ex"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="32dp"
                 android:layout_marginRight="32dp"
                 android:paddingStart="16dp"
                 android:paddingBottom="8dp"
                 android:paddingTop="8dp"
                 android:background="@drawable/btn_admisson"
                 >
                 <TextView
                     android:id="@+id/textView_ex"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="실기/실적 위주"
                     android:textSize="18sp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     />
                 <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/bottom_arrow"
                     android:layout_alignParentEnd="true"
                     android:layout_centerInParent="true"
                     />
             </RelativeLayout>
             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="100dp"
                 android:layout_marginRight="30dp"
                 android:layout_marginLeft="30dp"
                 android:src="@drawable/ex_infomation"
                 />
         </LinearLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout_jungsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/btn_admisson"
            >
            <TextView
                android:id="@+id/textView_jungsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정시모집"
                android:textSize="24sp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/next_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout_pean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/btn_admisson"
            >
            <TextView
                android:id="@+id/textView_pean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="편입학모집"
                android:textSize="24sp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/next_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout_foreigner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/btn_admisson"
            >
            <TextView
                android:id="@+id/textView_foreigner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="재외국민모집"
                android:textSize="24sp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/next_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>