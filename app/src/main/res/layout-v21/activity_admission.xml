<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/linearLayout_admission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/topBg"
        tools:ignore="MissingDefaultResource">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/topBg"
            android:id="@+id/Toolbar_admission"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_marginTop="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="입시정보"
                android:textSize="20sp"
                />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <RelativeLayout
                android:id="@+id/relativeLayout_susi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingStart="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:elevation="10dp"
                android:background="@drawable/btn_admisson"
                >
                <TextView
                    android:id="@+id/textView_susi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="수시모집"
                    android:textSize="20sp"
                    android:paddingStart="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/next_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
         <LinearLayout
             android:id="@+id/linearLayout_susi"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:visibility="visible"
             android:animateLayoutChanges="true"
             >
             <RelativeLayout
                 android:id="@+id/relativeLayout_subject"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="32dp"
                 android:layout_marginRight="32dp"
                 android:paddingStart="16dp"
                 android:paddingBottom="8dp"
                 android:paddingTop="8dp"
                 android:elevation="10dp"
                 android:background="@drawable/btn_admisson"
                 >
                 <TextView
                     android:id="@+id/textView_subject"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="학생부 교과"
                     android:textSize="18sp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     />
                 <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/next_arrow"
                     android:layout_alignParentEnd="true"
                     android:layout_centerInParent="true"
                     />
             </RelativeLayout>
             <LinearLayout
                 android:id="@+id/linearLayout_subject"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingTop="12dp"
                 android:layout_marginRight="50dp"
                 android:layout_marginLeft="50dp"
                 android:orientation="vertical"
                 android:visibility="gone"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/normal"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     />
                 <TextView
                     android:layout_marginLeft="12dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/normal_type"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/region"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="8dp"
                     android:text="@string/region_all"
                     android:textSize="15sp"
                     />
                 <TextView
                     android:layout_marginLeft="12dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/region_type"
                     />
             </LinearLayout>

             <RelativeLayout
                 android:id="@+id/relativeLayout_all"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="32dp"
                 android:layout_marginRight="32dp"
                 android:paddingStart="16dp"
                 android:paddingBottom="8dp"
                 android:paddingTop="8dp"
                 android:elevation="10dp"
                 android:background="@drawable/btn_admisson"
                 >
                 <TextView
                     android:id="@+id/textView_all"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="학생부 종합"
                     android:textSize="18sp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     />
                 <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/next_arrow"
                     android:layout_alignParentEnd="true"
                     android:layout_centerInParent="true"
                     />
             </RelativeLayout>
             <LinearLayout
                 android:id="@+id/linearLayout_all"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="50dp"
                 android:layout_marginLeft="50dp"
                 android:paddingTop="12dp"
                 android:orientation="vertical"
                 android:visibility="gone"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/all"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     />
                 <TextView
                     android:layout_marginLeft="12dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/all_type"
                     />
             </LinearLayout>
             <ImageView
                 android:id="@+id/imageView_all_info"
                 android:layout_marginLeft="30dp"
                 android:layout_marginRight="30dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:src="@drawable/all_infomation"
                 android:visibility="gone"
                 />
             <RelativeLayout
                 android:id="@+id/relativeLayout_ex"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="32dp"
                 android:layout_marginRight="32dp"
                 android:paddingStart="16dp"
                 android:paddingBottom="8dp"
                 android:paddingTop="8dp"
                 android:elevation="10dp"
                 android:background="@drawable/btn_admisson"
                 >

                 <TextView
                     android:id="@+id/textView_ex"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="실기/실적 위주"
                     android:textSize="18sp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     />
                 <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/next_arrow"
                     android:layout_alignParentEnd="true"
                     android:layout_centerInParent="true"
                     />

             </RelativeLayout>
             <LinearLayout
                 android:id="@+id/linearLayout_ex"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="50dp"
                 android:layout_marginLeft="50dp"
                 android:paddingTop="12dp"
                 android:orientation="vertical"
                 android:visibility="gone"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/ex"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     />
                 <TextView
                     android:layout_marginLeft="12dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/ex_type"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/ex_normal"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="8dp"
                     android:text="@string/ex_normal_type"
                     android:textSize="15sp"
                     />
                 <TextView
                     android:layout_marginLeft="12dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/region_type"
                     />
         </LinearLayout>
             <RelativeLayout
                 android:id="@+id/relativeLayout_subject_info"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="8dp"
                 android:layout_marginLeft="32dp"
                 android:layout_marginRight="32dp"
                 android:paddingStart="16dp"
                 android:paddingBottom="8dp"
                 android:paddingTop="8dp"
                 android:elevation="10dp"
                 android:background="@drawable/btn_admisson"
                 >
                 <TextView
                     android:id="@+id/textView_subject_info"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="더 자세한 정보 알아보기"
                     android:textSize="18sp"
                     android:layout_centerInParent="true"
                     android:layout_alignParentRight="true"
                     />
                 <ImageView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:src="@drawable/next_arrow"
                     android:layout_alignParentEnd="true"
                     android:layout_centerInParent="true"
                     />
             </RelativeLayout>
         </LinearLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout_jungsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:elevation="10dp"
            android:background="@drawable/btn_admisson"
            >
            <TextView
                android:id="@+id/textView_jungsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정시모집"
                android:paddingStart="20dp"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/next_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout_pean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:elevation="10dp"
            android:background="@drawable/btn_admisson"
            >
            <TextView
                android:id="@+id/textView_pean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="편입학모집"
                android:textSize="20sp"
                android:paddingStart="20dp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/next_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout_foreigner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="10dp"
            android:background="@drawable/btn_admisson"
            >
            <TextView
                android:id="@+id/textView_foreigner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="재외국민모집"
                android:textSize="20sp"
                android:paddingStart="20dp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/next_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>